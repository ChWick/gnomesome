<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-shell-extensions">
    <schema id="org.gnome.shell.extensions.gnomesome.prefs" path="/org/gnome/shell/extensions/gnomesome/prefs/">
        <key type="s" name="launch-terminal">
            <default>"gnome-terminal"</default>
            <summary>Command to launch a new terminal.</summary>
            <description/>
        </key>
        <key type="b" name="show-indicator">
            <default>true</default>
            <summary>Whether or not to show the indicator in the status bar.</summary>
            <description/>
        </key>
        <key type="s" name="default-layout">
            <choices>
                <choice value="floating"/>
                <choice value="horizontal"/>
                <choice value="vertical"/>
                <choice value="maximized"/>
            </choices>
            <default>"floating"</default>
        </key>
        <key name="outer-gaps" type="i">
            <range min="0" max="100"/>
            <default>20</default>
        </key>
        <key name="inner-gaps" type="i">
            <range min="0" max="100"/>
            <default>10</default>
        </key>
        <key type="b" name="pointer-follows-focus">
            <default>false</default>
            <summary>Whether or not the pointer follows the focused window (centers)</summary>
            <description></description>
        </key>
    </schema>
</schemalist>
